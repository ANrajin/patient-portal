@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-lg-12">
        <form>
            <div class="form-group">
                <table class="w-100">
                    <tbody>
                        <tr>
                            <td>
                                <label class="form-label field-required" for="name">Patient Name</label>
                            </td>
                            <td>
                                <input type="text" id="name" name="name" class="form-control my-2" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="form-label field-required" for="diseaseName">Disease Name</label>
                            </td>
                            <td>
                                <select id="diseaseName" class="form-control form-select my-2">
                                    <option value="" selected disabled>Please Select a Disease Name</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="form-label field-required" for="epilepsy">Epilepsy</label>
                            </td>
                            <td>
                                <select id="epilepsy" class="form-control form-select my-2">
                                    <option value="" selected disabled>Please Select</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="form-label" for="ncds">Other NCDs</label>
                            </td>
                            <td>
                                <div class="row my-2">
                                    <div class="col-5">
                                        <div class="border p-1" style="height: 250px; overflow-y: scroll;">
                                        </div>
                                    </div>
                                    <div class="col-2 d-flex align-items-center justify-content-center">
                                        <div class="d-grid gap-2">
                                            <button class="btn btn-outline-secondary" type="button"> Add > </button>
                                            <button class="btn btn-outline-secondary" type="button"> < Remove</button>
                                        </div>
                                    </div>
                                    <div class="col-5">
                                        <div class="border p-1" style="height: 250px; overflow-y: scroll;">
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="form-label field-required" for="allergies">Allergies</label>
                            </td>
                            <td>
                                <div class="row my-2">
                                    <div class="col-5">
                                        <div class="border p-1" style="height: 250px; overflow-y: scroll;">
                                        </div>
                                    </div>
                                    <div class="col-2 d-flex align-items-center justify-content-center">
                                        <div class="d-grid gap-2">
                                            <button class="btn btn-outline-secondary" type="button"> Add > </button>
                                            <button class="btn btn-outline-secondary" type="button"> < Remove</button>
                                        </div>
                                    </div>
                                    <div class="col-5">
                                        <div class="border p-1" style="height: 250px; overflow-y: scroll;">
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td class="text-center">
                                <button type="submit" class="btn btn-primary my-3 px-5">Save</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </form>
    </div>
</div>
